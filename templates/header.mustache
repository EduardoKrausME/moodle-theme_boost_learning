{{!
    @template none

    Page header.

    Example context (json): {}
}}

<header role="banner" class="pos-f-t navbar navbar-full navbar-light bg-faded navbar-static-top moodle-has-zindex">

    <div class="container-fluid navbar-nav">

        <a href="{{{ config.wwwroot }}}" class="navbar-brand
                    {{# output.should_display_navbar_logo1 }}has-logo{{/ output.should_display_navbar_logo1 }}
            {{# output.should_display_navbar_logo2 }}has-icone{{/ output.should_display_navbar_logo2 }}">
            {{# output.should_display_navbar_logo1 }}
                <span class="logo hidden-xs-down">
                    <img src="{{output.get_logo_url1}}" alt="{{sitename}}">
                </span>
            {{/ output.should_display_navbar_logo1 }}
            {{# output.should_display_navbar_logo2 }}
                <span class="icone hidden-xs-down">
                    <img src="{{output.get_logo_url2}}" alt="{{sitename}}">
                </span>
            {{/ output.should_display_navbar_logo2 }}
            <span class="site-name">{{{sitename}}}</span>
        </a>

        <div data-region="drawer-toggle">
            <div class="btn pull-xs-left btn-secondary navbar-toggler"
                 aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}"
                 aria-controls="nav-drawer" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>


        <!-- user_menu -->
        {{{ output.user_menu }}}

        <!-- navbar_plugin_output -->
        {{{ output.navbar_plugin_output }}}

        <!-- search_box -->
        <span class="hidden-md-down">
            {{{ output.search_box }}}
        </span>

        <nav class="nav navbar-nav hidden-md-down">
            <!-- custom_menu -->
            {{{ output.custom_menu }}}
            <!-- page_heading_menu -->
            {{{ output.page_heading_menu }}}
        </nav>
    </div>
</header>

